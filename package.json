  },
  "dependencies": {
    "@casl/ability": "^2.5.1",
    "@casl/mongoose": "^2.2.2",
    "@sentry/node": "^4.4.2",
    "@slack/client": "^4.8.0",
    "axios": "^0.18.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "date-fns": "^2.0.0-alpha.26",
    "dotenv": "^6.2.0",
    "email-templates": "^5.0.2",
    "express": "^4.16.3",
    "jest": "^23.6.0",
    "joi": "^14.3.0",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.11",
    "module-alias": "^2.1.0",
    "mongoose": "^5.4.0",
    "mongoose-delete": "^0.5.0",
    "morgan": "^1.9.1",
    "nodemailer": "^4.7.0",
    "nodemailer-mailgun-transport": "^1.4.0",
    "nunjucks": "^3.1.6",
    "random-string": "^0.2.0",
    "ts-jest": "^23.10.5",
    "xkpasswd": "^1.0.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/eslint": "^4.16.5",
    "@types/eslint-plugin-prettier": "^2.2.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.10",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/mongoose": "^5.3.5",
    "babel-eslint": "^10.0.1",
    "copyfiles": "^2.1.0",
    "eslint": "^5.11.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-detailed-reporter": "^0.7.3",
    "eslint-import-resolver-node": "^0.3.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.1",
    "jest-junit": "^5.2.0",
    "moxios": "^0.4.0",
    "ndb": "^1.0.42",
    "nodemon": "^1.18.9",
    "now": "^12.1.14",
    "prettier": "^1.15.3",
    "prettier-eslint": "^8.8.2",
    "supertest": "^3.3.0",
    "tree-node-cli": "^1.2.5",
    "ts-node": "^7.0.1",
    "ts-typie": "^1.1.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2"
  },
  "scripts": {
    "lint": "eslint src/**/*.{js,mjs}",
    "lint:fix": "yarn lint --fix",
    "lint:report": "yarn lint -f node_modules/eslint-detailed-reporter/lib/detailed.js -o coverage/eslint.html",
    "format": "prettier --write 'src/**/*.{js,mjs}'",
    "start": "nodemon",
    "now-start": "node dist/index.js",
    "build": "tsc",
    "now-build": "echo 'Built on CircleCI'",
    "test": "jest --env=node",
    "debug": "ndb yarn start",
    "copy-templates": "copyfiles src/**/*.njk src/**/*.nunjucks dist/ -u 1"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "^election/(.*)$": "<rootDir>/src/modules/election/$1",
      "^lodge/(.*)$": "<rootDir>/src/modules/lodge/$1",
      "^unit/(.*)$": "<rootDir>/src/modules/unit/$1",
      "^user/(.*)$": "<rootDir>/src/modules/user/$1",
      "^utils/(.*)$": "<rootDir>/src/utils/$1"
    },
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "_moduleAliases": {
    "election": "dist/modules/election",
    "lodge": "dist/modules/lodge",
    "unit": "dist/modules/unit",
    "user": "dist/modules/user",
    "utils": "dist/utils",
    "emails": "dist/emails"
  }
}
