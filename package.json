{
  "name": "backend",
  "version": "1.0.0",
  "main": "src/index.js",
  "license": "MIT",
  "engines": {
    "node": "9.x.x"
  },
  "dependencies": {
    "@casl/ability": "^2.4.2",
    "@sentry/node": "^4.0.6",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "email-templates": "^5.0.2",
    "express": "^4.16.3",
    "jest": "^23.6.0",
    "joi": "^13.7.0",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.11",
    "mongoose": "^5.3.1",
    "mongoose-delete": "^0.4.0",
    "morgan": "^1.9.1",
    "nodemailer": "^4.6.8",
    "nodemailer-mailgun-transport": "^1.4.0",
    "nunjucks": "^3.1.4",
    "ts-jest": "^23.10.5",
    "xkpasswd": "^1.0.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/eslint": "^4.16.4",
    "@types/eslint-plugin-prettier": "^2.2.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.10",
    "@types/jsonwebtoken": "^8.3.0",
    "babel-eslint": "^10.0.1",
    "date-fns": "^2.0.0-alpha.26",
    "eslint": "^5.6.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-detailed-reporter": "^0.7.3",
    "eslint-import-resolver-node": "^0.3.2",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "ndb": "^1.0.42",
    "nodemon": "^1.18.4",
    "now": "^11.4.6",
    "prettier": "^1.14.3",
    "prettier-eslint": "^8.8.2",
    "ts-node": "^7.0.1",
    "ts-typie": "^1.1.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.1"
  },
  "scripts": {
    "lint": "eslint src/**/*.{js,mjs}",
    "lint:fix": "yarn lint --fix",
    "lint:report": "yarn lint -f node_modules/eslint-detailed-reporter/lib/detailed.js -o coverage/eslint.html",
    "format": "prettier --write 'src/**/*.{js,mjs}'",
    "start": "nodemon",
    "now-start": "node ./dist/index.js",
    "build": "tsc",
    "now-build": "echo 'Built on now'",
    "test": "jest",
    "debug": "ndb yarn start"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleNameMapper": {
      "^election/(.*)$": "<rootDir>/src/modules/election/$1",
      "^lodge/(.*)$": "<rootDir>/src/modules/lodge/$1",
      "^unit/(.*)$": "<rootDir>/src/modules/unit/$1",
      "^user/(.*)$": "<rootDir>/src/modules/user/$1",
      "^utils/(.*)$": "<rootDir>/src/utils/$1"
    }
  }
}
