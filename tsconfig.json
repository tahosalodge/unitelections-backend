{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "lib": ["es5", "es2015", "es2016.array.include", "esnext.asynciterable"],
    "noImplicitAny": false,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "election/*": ["modules/election/*"],
      "lodge/*": ["modules/lodge/*"],
      "unit/*": ["modules/unit/*"],
      "user/*": ["modules/user/*"],
      "admin/*": ["modules/admin/*"],
      "candidate/*": ["modules/candidate/*"],
      "utils/*": ["utils/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/typings"],
    "rootDirs": ["src/"],
    "types": ["node", "jest"]
  },
  "exclude": ["./node_modules/*"],
  "include": ["src/**/*"]
}
